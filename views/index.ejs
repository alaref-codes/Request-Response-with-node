<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head.ejs')   %>

<body>

    <%- include('./partials/nav.ejs')   %>
    
    <div class="blog content">
        <% if (blogs.length) { %>
            <% blogs.forEach(blog => { %>
            <a class="single" href="/blogs/<%= blog._id %>">
                <h1> <%= blog.title %> </h1>
                <p> <%= blog.body %>  </p>
            </a>
            <% }) %>
        <% } else { %>
            <p> There is no blogs for the moment </p>
        <% } %>
    </div>

    <%- include('./partials/footer.ejs')   %>

</body>
</html>